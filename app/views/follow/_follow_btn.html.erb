<% if user.followers.include?(current_user) %>
	<%= link_to "Following", unfollow_user_follow_index_path(user, id: user.id), remote: true, class: "btn btn-success btn-sm", id: "follow-#{user.id}" %>
<% else %>
  <%= link_to "Follow", follow_user_follow_index_path(user, id: user.id), remote: true, class: "btn btn-primary btn-sm", id: "follow-#{user.id}"  %>
<% end %>
