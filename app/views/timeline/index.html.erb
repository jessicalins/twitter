<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<div class="media info-profile">
			  <a class="pull-left">
			    <img src=<%= current_user.avatar.thumb.url %> alt=<%= current_user.name %>>
			  </a>
			  <div class="media-body">
			  	<h2 class="media-heading"><strong><%= current_user.username %></strong></h2>
			  	<span class="label label-info">You</span>
				</div>	
			</div>
	    <%= render 'timeline/listing' %>
		</div>
		<div class="col-lg-3">
			<strong>Name </strong><%= current_user.name %> <br>
			<strong>Tweets </strong><%= "#{current_user.tweets.count}" %>
			<h4><%= "#{current_user.following.count} following" %></h4>
			<h4><%= "#{current_user.followers.count} followers" %></h4>
		</div>
	</div>
</div>
