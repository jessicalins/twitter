<div class="container">
	<div class="row">
		<div class="col-lg-6">
	    <table class="table table-hover">
	    		<caption><h3>Recent tweets</h3></caption>
	        <% if @tweets %>
	        	<% @tweets.each do |tweet| %>
			        <tbody>
			            <tr>
			              <td><strong><%= tweet.author %></strong><%= ": #{ tweet.content }" %></td>
			            </tr>
			        </tbody>
			      <% end %>
			    <% end %>
	    </table>
		</div>
	</div>
</div>
