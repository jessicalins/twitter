<div class="container">
	<div class="row">
		<div class="col-lg-6">
	    <table class="table table-hover">
	    		<caption><h3>Recent tweets</h3></caption>
	        <% if @tweets %>
	        	<% @tweets.each do |tweet| %>
	        		<% tweet.each do |t| %>
				        <tbody>
				            <tr>
				              <td><strong><%= t.author %></strong><%= ": #{ t.content }" %></td>
				            </tr>
				        </tbody>
				      <% end %>
			      <% end %>
			    <% end %>
	    </table>
		</div>
	</div>
</div>
